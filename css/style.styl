@import "normalize.min"

color1 = #333333
color2 = #a6a09e
tipo-letra = "HelveticaNeue-Light","Helvetica Neue Light","Helvetica Neue",Helvetica,Arial,"Lucida Grande",sans-serif
size-letra = 16px

*
	background-color color1
	color #ffffff
	font-family tipo-letra
	font-size size-letra

body
	background-color color1
	
	header
		height 130px

		img.logo
			margin 20px 0px 0px 35px
			width 230px
			height 90px

		nav
			color color2
			display inline-block

			ul
				list-style none

				li
					cursor hand
					cursor pointer
					display inline-block
					float left
					margin auto
					padding 5px
					text-decoration none
	
	#wrap
		background url(img/bg_inicio.jpg) no-repeat 100%
		width 100%
		height 100%

	footer
		height 75px